# 通用设定
set use_from=yes
set envelope_from=yes
set move=yes    #移动已读邮件

# 本地缓存目录
# set header_cache = ~/.mutt/cache/headers
# set message_cachedir = ~/.mutt/cache/bodies

# 回信不包含邮件头
set header = no

# 退出提醒
set quit = ask-yes

set include #回复的时候调用原文

# 设置回信引文之前的插入符号
set indent_str = "> "
# 设置邮件头
my_hdr From: cfanzp@aliyun.com

set index_format="| %4C | %Z | %{%b %d} | %-15.15L | %s"
set folder_format="| %2C | %t %N | %8s | %d | %f"
#macro index G "!fetchmail -a -m 'procmail -d %T'\r"
#macro pager G "!fetchmail -a -m 'procmail -d %T'\r"

macro index G "!fetchmail -vk\r"
macro pager G "!fetchmail -vk\r"

# 邮件打分
score "~N" +4
score "~s 通知" +2
score "~D" -5
score "~O" +1
score "~s believe" -10
set sort=reverse-date-received            # 邮件按日期由近及远排列
set sort_aux=score                        # 按打分排序

# 排序方式
#set sort = score
# 二级排序
#set sort_aux = date

# 翻到最后一页不回到第一页
set pager_stop

# 快速回信
set fast_reply

# 删除邮件自动移动光标

#set locale="zh_CN.UTF-8"                   # 使用中文
set ascii_chars=yes                         # 用纯 ascii 表示树状列表
# 发信使用的字符集
set charset="utf-8"
set send_charset = "us-ascii:iso-8859-1:gb18030:utf-8"
set rfc2047_parameters=yes                  # 解决中文附件名是乱码的问题
charset-hook ^iso-8859-1$ gb2312            # 把 iso-8859-1 编码映射到 gb2312
charset-hook !utf-8 gb2312                  # 把不是 utf-8 的编码都映射到 gb2312
charset-hook ^us-ascii$ gb2312              # 把 us-ascii 编码映射到 gb2312

# 是否编辑邮件头
set edit_headers = no

# 发送者账号
set realname="zp"
set from="cfanzp@aliyun.com"

# 分类邮箱
set mbox_type = Maildir #Mail box type
set folder = "$HOME/mail"
set spoolfile = "$HOME/mail/inbox" #INBOX
set mbox="$HOME/mail/seen"  #Seen box
set record="$HOME/mail/sent"  #Sent box
set postponed="$HOME/mail/draft"  #Draft box

# 关联程序（需要自己用which命令确定一下）
set editor="vim"
set sendmail="/usr/local/bin/msmtp"
# pager显示行数
set pager_index_lines = 4

# 使用solarized配色方案
source ~/.mutt/mutt-colors-solarized/mutt-colors-solarized-dark-256.muttrc



set delete=ask-yes                        # 删除前询问
ignore x-mailer                           # 忽略 x-mailer 邮件头

auto_view text/html application/msword    # 让 mutt 自动浏览邮件中 text/html 的那部分

# 监视下面几个邮箱，随时报告新邮件
set check_new=yes                         # 查是否有新邮件
set mail_check=60                         # 每 60 分钟查一次
set timeout=30

# HTML 是最后的选择
alternative_order text/enriched text/plain text/html

